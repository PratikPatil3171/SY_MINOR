# Environment Variables
# Copy this file to .env and update with your values

# MongoDB Atlas Connection String
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# Get this from MongoDB Atlas Dashboard -> Clusters -> Connect -> Connect your application
# 
# IMPORTANT: If password has special characters (@ : / ? # [ ] etc.), use URL encoding:
# < = %3C, > = %3E, @ = %40, etc.
# Example: password <SYMINOR@2026> becomes %3CSYMINOR%402026%3E
MONGODB_URI=mongodb+srv://admin:%3CSYMINOR%402026%3E@syminor.brqflub.mongodb.net/career_advisor?retryWrites=true&w=majority&appName=SYMINOR

# For local MongoDB (alternative):
# MONGODB_URI=mongodb://localhost:27017/career_advisor

# Server Configuration
PORT=3000

# Python Engine
PYTHON_ENGINE_URL=http://localhost:5000

# Gemini API (if using)
GEMINI_API_KEY=your_api_key_here
